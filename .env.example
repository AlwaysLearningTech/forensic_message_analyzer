# Anthropic Claude Configuration (via Azure AI Model Catalog or direct API)
# For Azure AI: set AI_ENDPOINT to your Azure AI endpoint URL
# For direct Anthropic API: leave AI_ENDPOINT blank, set AI_API_KEY to your Anthropic key
AI_ENDPOINT=https://your-resource.services.ai.azure.com
AI_API_KEY=your-api-key-here
AI_MODEL=claude-opus-4-6

# Contact Mapping - Define names for reports and their identifiers
# PERSON(x)_NAME: The name used in all reports (e.g., "David Snyder")
# PERSON(x)_MAPPING: List of identifiers to match (phones, emails, names, aliases)
# IMPORTANT: Use single quotes around the JSON array to avoid parsing issues
# NOTE: Phone numbers are automatically expanded to common formats:
#   - "+12345678901" also matches "234-567-8901" and "(234) 567-8901"
#   - You only need to list each phone number once in any format
PERSON1_NAME="First Last"
PERSON1_MAPPING='["+12345678901","email@example.com","FirstName","Full Name"]'

PERSON2_NAME="Another Person"
PERSON2_MAPPING='["+19876543210","another@example.com","AnotherName"]'

PERSON3_NAME="Third Person"
PERSON3_MAPPING='["third@example.com","ThirdName","Nickname"]'

# Date Range (optional, format: YYYY-MM-DD)
START_DATE=None
END_DATE=None

# Analysis Thresholds
THREAT_CONFIDENCE_THRESHOLD=0.5
MANUAL_REVIEW_THRESHOLD=0.5

# Analysis Settings
BATCH_SIZE=50
MAX_RETRIES=3
ENABLE_IMAGE_ANALYSIS=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_OCR=true

# Data Sources
# iMessage database location (macOS default location)
MESSAGES_DB_PATH=~/Library/Messages/chat.db
MESSAGES_DB_WAL=~/Library/Messages/chat.db-wal
MESSAGES_DB_SHM=~/Library/Messages/chat.db-shm

# WhatsApp exported chat directory
WHATSAPP_SOURCE_DIR=~/workspace/data/forensic_message_analyzer/source_files/whatsapp/

# Screenshot directory for OCR processing
SCREENSHOT_SOURCE_DIR=~/workspace/data/forensic_message_analyzer/source_files/screenshots/

# Review Data Storage (for manual review decisions - stored outside repository)
REVIEW_DIR=~/workspace/data/forensic_message_analyzer/review

# AI Processing Mode
# true = Batch API (50% cost discount, async processing, recommended for production)
# false = Synchronous (real-time, useful for testing/development)
USE_BATCH_API=true

# Rate Limiting (synchronous mode only; batch API handles its own limits)
TOKENS_PER_MINUTE=150000
REQUEST_DELAY_MS=500
MAX_TOKENS_PER_REQUEST=4096

# Output Settings (for all analysis outputs - stored outside repository)
OUTPUT_DIR=~/workspace/output/forensic_message_analyzer

# Logging
LOG_LEVEL=INFO
CONTENT_FILTER_LOG=~/workspace/data/forensic_message_analyzer/logs/content_filter_rejected.log

