# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/openai/deployments/your-deployment/chat/completions?api-version=2025-01-01-preview
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_DEPLOYMENT=your-deployment-name

# Contact Mapping (JSON format for multiple identifiers)
# Format: NAME_CONTACTS=["phone1","email1","name1"]
PERSON1_CONTACTS=["+1234567890","email@example.com","FirstName"]
PERSON2_CONTACTS=["+0987654321","another@example.com","SecondName"]
PERSON3_CONTACTS=["third@example.com","Nickname","Full Name"]

# Date Range (optional, format: YYYY-MM-DD)
START_DATE=2000-01-01
END_DATE=

# Analysis Thresholds
THREAT_CONFIDENCE_THRESHOLD=0.5
MANUAL_REVIEW_THRESHOLD=0.5

# Analysis Settings
BATCH_SIZE=10
MAX_RETRIES=3
ENABLE_IMAGE_ANALYSIS=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_OCR=true

# Data Sources
WHATSAPP_SOURCE_DIR=./source_files/whatsapp/
SCREENSHOT_SOURCE_DIR=./source_files/screenshots/
MESSAGES_DB_PATH=~/Library/Messages/chat.db
MESSAGES_DB_WAL=~/Library/Messages/chat.db-wal
MESSAGES_DB_SHM=~/Library/Messages/chat.db-shm

# Rate Limiting (2000 tokens per minute)
TOKENS_PER_MINUTE=2000
REQUEST_DELAY_MS=500
MAX_TOKENS_PER_REQUEST=150

# Output Settings
OUTPUT_DIR=./output/

# Logging
LOG_LEVEL=INFO
CONTENT_FILTER_LOG=./logs/content_filter_rejected.log

